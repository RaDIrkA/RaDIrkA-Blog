<h1><%= @post.title %></h1>

<%= @post.text %>

<h2>Komentarji</h2>

<% @post.comments.each do |comment| %>
	<p><%= comment.text %></p>
	<p><%= time_ago_in_words comment.created_at %> ago</p>
	<p><%= link_to "Izbriši komentar", [@post, comment], :method => :delete, :confirm => "Ste prepričani?" %></p>
	<% end %>

	
	<%= form_for [@post, @post.comments.build] do |f| %>
	<p><%= f.text_area :text, :size => '40x10' %></p>
	<p><%= f.submit "Napiši komentar" %></p>
<p>
<%= link_to "Nazaj", posts_path %>
|
<%= link_to "Uredi", edit_post_path(@post) %>
|
<%= link_to "Izbriši", @post, :method => :delete,:confirm => "Ste prepričani?" %>
</p>

<% end %>
